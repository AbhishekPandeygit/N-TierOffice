@model LoginVM
@{
   Layout = "";

}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="https://kit.fontawesome.com/9514370813.js" crossorigin="anonymous"></script>

    <link href="~/css/login.css" rel="stylesheet" />
</head>

<body>

    <div class="row container">

        <div class="col-6">
            <h1 style="font-style: italic;">Vedic Life </h1>
            <!-- <img src="images\logo-white.png" style="height: 60px; width: 100px;" alt="">  -->
        </div>

    </div>

    <div class="container" style="height: 80px;">

        <div class="row container">
            <div class="col-6">

                <h3 style="margin-top: 50px ; margin-bottom: 20px;">
                    Welcome Back</h3>

                    <p>Register here , if you are not registered .</p>
                    <a asp-action="Register" asp-controller="Account"> <h4>Register</h4>  </a>
            </div>

            <div class="col-6">

                <h2>
                    Get Started</h1>
                    <p>Welcome back login with your data that you entered during registration</p>

                    <form method="post" asp-controller="Account" asp-action="Login">
                        <div class="row">

                            <div class="input form-floating mb-3">
                                <i class="icon fa-solid fa-user-tie fa-lg"></i>
                                <input type="text" class="form-control" id="floatingName" asp-for="Email" placeholder="Email">
                                <label for="floatingName" asp-for="Email">First Name</label>

                            </div>
                        </div>
                        <div class="row">

                            <div class="form-floating  mb-3">
                                <i class="icon fa-solid fa-lock fa-lg"></i>
                                <input type="password" class="form-control" id="floatingEmail" asp-for="Password" placeholder="Password">
                                <label for="floatingEmail" asp-for="Password">Password</label>

                            </div>
                        </div>


                        <div class="row mb-3 form-group text-white">
                            <label>
                                <input type="checkbox" id="rememberMe" asp-for="RememberMe" id="rememberMe" /> Remember Me
                            </label>
                        </div>

                        <div class="row">
                            <button type="submit" class="btn btn-primary mb-3" style="border-radius: 35px ;">Login</button>

                        </div>



                    </form>

                    <div class="text-white">
@*                         <a class="text-white" asp-action="ForgotPassword" asp-controller="Account"> Forgot Password &nbsp; &nbsp; </a>
 *@                        <a class="text-white ml-4" asp-action="ForgotPassword" asp-controller="Account"> Forgot Password </a>

                    </div>
            </div>

        </div>


    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
</body>

</html>
        @section scripts{
            <partial name="_ValidationScriptsPartial.cshtml" />
        }

<script src="~/js/site.js" asp-append-version="true"></script>